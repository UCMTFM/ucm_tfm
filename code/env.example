# Databricks Configuration
# Your Databricks workspace URL (e.g., https://adb-1234567890123456.7.azuredatabricks.net)
DATABRICKS_WORKSPACE_URL=https://your-workspace.cloud.databricks.com

# Your Databricks access token (generate from User Settings â†’ Access Tokens)
DATABRICKS_ACCESS_TOKEN=your_databricks_access_token_here

# Catalog and schema for queries (defaults to hive_metastore.default)
DATABRICKS_CATALOG=hive_metastore
DATABRICKS_SCHEMA=default

# Telegram Configuration
# Your Telegram bot token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Comma-separated list of authorized Telegram user IDs
# Get your user ID by messaging @userinfobot on Telegram
TELEGRAM_ALLOWED_USERS=123456789,987654321

# Application Configuration
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum timeout for queries in seconds
MAX_QUERY_TIMEOUT=300

