# Databricks Configuration (Required for both Telegram Bot and Streamlit UI)
DATABRICKS_WORKSPACE_URL=https://your-workspace.cloud.databricks.com
DATABRICKS_ACCESS_TOKEN=DATABRICKS_ACCESS_TOKEN

# Databricks Data Configuration (Optional)
DATABRICKS_CATALOG=hive_metastore
DATABRICKS_SCHEMA=default

# Telegram Bot Configuration (Required only for Telegram Bot)
TELEGRAM_BOT_TOKEN=1234567890:ABCDEF1234567890abcdef1234567890
TELEGRAM_ALLOWED_USERS=123456789,987654321

# Application Configuration (Optional)
LOG_LEVEL=INFO
MAX_QUERY_TIMEOUT=300

# Streamlit Configuration (Optional)
STREAMLIT_PORT=8501

# Development Configuration
PYTHONPATH=${PWD}/src
